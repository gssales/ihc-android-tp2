<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_x"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:enabled="false"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edt_y"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_y"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Y"
        android:enabled="false"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/edt_x"
        app:layout_constraintEnd_toStartOf="@id/edt_z"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_z"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Z"
        android:enabled="false"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/edt_y"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@id/edt_y"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>